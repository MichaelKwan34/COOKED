<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:padding="10dp">

    <TextView
        android:id="@+id/instruction_item_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:textColor="@color/textForm"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/instruction_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/instruction_item_step"
        android:layout_toStartOf="@id/instruction_item_delete"
        android:layout_centerVertical="true"
        android:textColor="@color/textForm"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/instruction_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/trash_can_pink_14" />

</RelativeLayout>