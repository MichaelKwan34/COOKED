<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#95DFAA"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <!-- Profile Picture Section -->
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/profile_photo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile Photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"

            android:paddingVertical="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:background="@color/background"
                android:src="@drawable/outline_photo_camera_black_24"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Custom"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/photo_button"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/blueAccent"
                android:layout_marginStart="50dp"
                android:text="Select a Photo"
                app:icon="@drawable/outline_photo_camera_black_24" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Display Name" />
    <com.google.android.material.textfield.TextInputEditText

        android:id="@+id/edit_name_editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:inputType="text"
        android:text="Name" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:backgroundTint="@color/blueAccent"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />

</LinearLayout>


